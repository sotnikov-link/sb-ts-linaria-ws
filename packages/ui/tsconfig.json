{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "rootDir": "./src",
    "outDir": "./out",
    "plugins": [{ "transform": "ts-nameof", "type": "raw" }],
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true
  },
  "files": [
    "src/index.tsx",
    "src/declarations.d.ts",
    "src/components/index.tsx"
  ],
  "include": ["src/**/*.spec.tsx"],
  "exclude": ["node_modules", "out"]
}
